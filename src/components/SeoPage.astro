---
import { SEO } from "astro-seo";
import { type iSeoPage } from "@/models/iSeoPage";
import { getImage } from "@/shared/imageResolver";
const site = Astro.site;

const { data } = Astro.props;
const seoData = data as iSeoPage;

const rawUrlImage = getImage(seoData.image);
const urlImage = rawUrlImage ? site + rawUrlImage.src : seoData.image;
---

<SEO
  title={seoData.title}
  description={seoData.description}
  openGraph={{
    basic: {
      title: seoData.title,
      type: "website",
      image: urlImage,
    },
    optional: {
      description: seoData.description,
    },
  }}
  twitter={{
    creator: "@coins5",
    title: seoData.title,
    image: urlImage,
    imageAlt: seoData.title,
    description: seoData.description,
  }}
/>
