---
interface Props {
  actionButtonText?: string | null;
  actionButtonTo?: string | null;
  isBackButton?: boolean | null;
}

import ThemeIcon from "@/components/ThemeIcon.astro";
import MenuSvg from "@/assets/svg/menu.svg";
import BackButtonSvg from "@/assets/svg/back-button.svg";

const links = [
  {
    to: "About",
    url: "/about",
  },
  {
    to: "Blog",
    url: "/blog",
  },
  {
    to: "Projects",
    url: "/projects",
  },
];

const {
  actionButtonText = "Coins5",
  actionButtonTo = "/",
  isBackButton = false,
} = Astro.props;
---

<header>
  <div class="drawer">
    <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content flex flex-col">
      <!-- Navbar -->
      <div class="navbar w-full">
        {
          isBackButton ? (
            <a href={actionButtonTo}>
              <BackButtonSvg height="24px" width="24px" />
            </a>
          ) : (
            <div class="flex-none lg:hidden">
              <label
                for="my-drawer-3"
                aria-label="open sidebar"
                class="btn btn-square btn-ghost"
              >
                <MenuSvg />
              </label>
            </div>
          )
        }

        <div class="mx-2 flex-1 px-2">
          <a href={actionButtonTo}> {actionButtonText} </a>
        </div>
        <div class="hidden flex-none lg:block">
          <ul class="menu menu-horizontal">
            <!-- Navbar menu content here -->
            {
              links.map((l) => (
                <li>
                  <a href={l.url}>{l.to}</a>
                </li>
              ))
            }
            <!-- <li><ThemeIcon /></li> -->
          </ul>
        </div>
        <ThemeIcon />
      </div>
      <!-- Page content here -->
      <slot />
    </div>
    <div class="drawer-side">
      <label for="my-drawer-3" aria-label="close sidebar" class="drawer-overlay"
      ></label>
      <ul class="menu bg-base-200 min-h-full w-80 p-4">
        <!-- Sidebar content here -->
        {
          links.map((l) => (
            <li>
              <a href={l.url}>{l.to}</a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</header>
