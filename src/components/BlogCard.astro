---
import type { BlogSchema } from "@/schemas/blog";
import ImageRenderer from "./ImageRenderer.astro";

const { entry } = Astro.props;
const { data } = entry;
const post = data as BlogSchema;
const postLink = `/posts/${entry.id}`;
---

<div class="card bg-base-100 shadow-sm not-prose w-96">
  <figure>
    <a href={postLink}>
      <!-- <img
        src={post.image.url}
        alt={post.image.alt}
        class="h-[240px] object-cover"
      /> -->
      <ImageRenderer
        imagePath={post.image.url}
        imageAlt={post.image.alt}
        small
      />
    </a>
  </figure>
  <div class="card-body">
    <h2 class="card-title underline">
      <a href={postLink}>{post.title}</a>
    </h2>
    <p>
      {post.description}
    </p>
  </div>
</div>
